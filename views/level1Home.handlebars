<div class="modal fade" id="addUser" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-md modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form>
          <h3>Add a user to the database</h3>
          <div class="form-group">
            <label for="username">Username</label>
            <input type="username" class="form-control" id="addUsername" aria-describedby="usernameHelp"
              placeholder="Enter Username">
          </div>
          <div class="form-group">
            <label for="userPassword">Password</label>
            <input type="password" class="form-control" id="addUserPassword" placeholder="Password">
          </div>
          <div class="form-group">
            <label for="userAccessLevel">Password</label>
            <input type="accessLevel" class="form-control" id="addUserAccessLevel" placeholder="User Access Level">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="submitNewUser" type="button" class="btn" data-dismiss="modal"
          style="background-color:aquamarine">Add</button>
      </div>
